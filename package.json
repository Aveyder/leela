  "private": true,
  "main": "index.js",
  "scripts": {
    "dev:client": "cross-env NODE_ENV=development webpack serve",
    "dev:server": "tsc-watch -b --onSuccess \"cross-env ENV_DIR=\"./src/config\" NODE_ENV=development node dist/server/server/server.js\"",
    "build:client": "cross-env NODE_ENV=development webpack",
    "build:server": "tsc -b",
